<%= form_with(model: search, url: search_json_path(@search)) do |form| %>
  <% if search.errors.any? %>
    <div class="alert alert-error shadow-lg grid justify-items-start my-5">
      <div>
        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
        <p class="font-bold"><%= pluralize(search.errors.count, "error") %> prohibited this Search from being saved:</p>
      </div>
      <div>
        <ul class="list-disc list-inside">
          <% search.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-control mt-5">
    <%= form.label :json, "JSON:" %>
    <%= form.text_area :json, class: "textarea textarea-bordered w-full", rows: 20 %>
  </div>

  <div class="my-5">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>