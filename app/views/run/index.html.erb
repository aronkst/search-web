<h1 class="text-2xl mb-5">Runs from <%= @search.title %></h1>

<% @runs.each do |run| %>
  <div class="flex flex-row gap-4">
    <p class="grow place-self-center"><%= run.created_at.to_formatted_s(:db) %></p>
    <%= link_to "Show", run_show_path(@search, run), class: "flex-none btn" %>
  </div>
  <div class="divider"></div>
<% end %>
